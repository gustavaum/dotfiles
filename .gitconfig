	email = mattrogers@sbcglobal.net
    name = Matt Rogers

[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
    pushInsteadOf = kde:

[url "https://github.com/"]
    insteadOf = github:
[url "git@github.com:"]
    pushInsteadOf = github:

[url "git@github.com:mattr-/"]
    insteadOf = mattr:
    pushInsteadOf = mattr:

[diff]
[color]
    ui = auto

[alias]
    aa = add --all
    di = diff 
    head = !git l -1
    st = status
    stuno = status -uno
    co = checkout
    ci = commit
    ff = merge --ff-only
    pff = pull --ff-only 
    last = !git l -1
    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    sm = submodule
    bd = branch -d
    b = branch
    dc = diff --cached
    undo = "!source ~/.githelpers && undo_local_changes"
    sdcp = "!source ~/.githelpers && dryrun_dcommit_with_patch"
    sdc = svn dcommit



[core]
    excludesfile = ~/.cvsignore
